# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/callback

# Google Drive Settings
# Parent folder ID where all audit folders will be created (optional)
GOOGLE_DRIVE_PARENT_FOLDER_ID=

# Template IDs (Create Google Sheet/Slides templates and paste their IDs here)
SHEET_TEMPLATE_ID=your-sheet-template-id
SLIDES_TEMPLATE_ID=your-slides-template-id

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
